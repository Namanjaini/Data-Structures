#include<iostream>
using namespace std;

int sum(int n)
{
    if(n==1)
    {
        return 1;
    }
    else
    {
        return (n+sum(n-1));
    }
}

int main()
{
    int n;
    cout<<"Enter the no."<<endl;
    cin>>n;

   int r= sum(n);
   cout<<"The sum of natural no. up to "<<n<<" is "<<r;
}
